#header-inner,#main-nav-inner,#contact-inner,#contact-options-inner,#form-wrap,.mid,#main-footer .in{
	max-width:1400px;
	margin:0 auto;
}

header{
	position: relative;
	z-index:2;
	width:93.75%;
	background: #fff;
	padding:10px 3.125%;
	#logo{
		text-align:center;
		a{
			display:block;
		}
	}
}

#header-inner{
	overflow:hidden;
	width:100%;
}

#mobile-nav{
	border-top:1px solid $border-gray;
	border-bottom:1px solid $border-gray;
	position: relative;
	z-index:2;
	width:100%;
	background:white;
	ul{
		overflow: hidden;
	}
	li{
		text-align:center;
		float:left;
		font-size:0.75em;
		color:$lightgray;
		text-transform:uppercase;
		height:50px;
		span{
			display:block;
		}
	}
	a,b{
		font-weight:normal;
		display:block;
		height:30px;
		text-decoration:none;
		color:$lightgray;
		padding:10px 0;
		font-weight:normal;
		span{
			display:block;
			font-weight:normal;
		}
	}
}

#email{
	width:25%;
}

#address{
	width:18.75%;
}

#phone{
	width:32.8125%;
}

#mobile-menu{
	width:23.4375%;
	&.active,&:active,&:hover,&:focus{
		a{
			color:white;
			background:$purple;
		}
	}
}

#main-nav{
	z-index:1;
	margin-top:-240px;
	position: relative;
	padding:10px 0;
	width:100%;
	background:$purple;
	ul{
		color:white;
		li{
			list-stlye:none;
			width:100%;
			@include font-nb;
			letter-spacing:1px;
			color:$darkgray;
			font-size:0.75em;
			
			&.active,&:focus,&:active{
				background:#5E4177;
				span{
					display:inline;
				}
			}
			&:active{
				top:1px;
				position:relative;
			}
		}
		span{
			display:none;
		}
		a{
			color:white;
			text-decoration:none;
			display:block;
			padding:10px;
		}
	}
}


.no-touch #main-nav li:hover{
	background:#5E4177;
	span{
		display:inline;
	}
}

#contact{
	width:100%;
	position:relative;
	z-index:2;
	background:$purple;
	margin-top:-535px;
}

#contact-options{
	background:#fff;
	width:100%;
	p{
		text-align:center;
		border-bottom:1px solid $border-gray;
		margin:0;
		height:40px;
		line-height:40px;
		color:$lightgray;
		@include font-nb;
		font-size:0.75em;
		a{
			text-decoration:none;
			color:$lightgray;
			
		}
	}
}

#contact-options-inner{
		height:50px;
		padding-top:10px;
		a{
			height:50px;
			color:$darkgray;
			width:50%;
			float:left;
			text-align:center;
			@include font-nb;
			font-size:1em;
			text-decoration:none;
			@include t-04;
			span{
				font-family:'gi';
				font-size:1em;
				display:block;
				text-transform:none;
				letter-spacing:0px;
				
			}
			&.active,&:active,&:hover,&:focus{
				position: relative;
				background: #fff;
				&:after{
					top: 100%;
					border: solid transparent;
					content: " ";
					height: 0;
					width: 0;
					position: absolute;
					pointer-events: none;
					border-top-color: #fff;
					border-width: 8px;
					left: 50%;
					margin-left: -8px;
				}
				color:$blue;
				span{
					color:$darkgray;
				}
			}
		}
	}

#form-wrap{
	width:100%;
	height:440px;

	overflow:hidden;
	input[type="text"],input[type="tel"],input[type="email"]{
		border:none;
		padding:0;
		margin:0;

		height:24px;
		background:#fff;
		@include border-radius(3px);
		width:96%;
		font-family:Helvetica;
		font-size:1em;
		color:$darkgray;
		padding:3px 2%;
	}
	textarea{
		border:none;
		padding:0;
		margin:0;
		background:#fff;
		@include border-radius(3px);
		width:98%;
		font-family:Helvetica;
		font-size:1em;
		color:$darkgray;
		padding:3px 1%;
		height:175px;
	}
	label{
		color:#fff;
		text-transform:uppercase;
		font-size:0.875em;
		width:100%;
		display:block;
		margin-bottom:10px;
		.ast{
			color:$orange;
			font-size:16px;
		}
	}
	select{
		width:100%;
		height:30px;
		margin-top:5px;
	}
	.row{
		margin:10px 0;
		overflow:hidden;
		&.full{
			width:96%;
			padding:0 2%;
		}
		fieldset{
			width:46%;
			padding:0 2%;
			float:left;
			&:first-child{
				
			}
		}
	}
	input[type="submit"]{
		@include blue-pill;
	}

	.close{
		background:white;
		float:right;
		@include border-radius(30px);
		width:30px;
		height:30px;
		text-align:center;
		line-height:30px;
		text-decoration:none;
		color:$darkgray;
		&:hover,&:focus{
			color:$orange;
		}
	}
	form{
		height:420px;
		padding-top:10px;
		padding-bottom:10px;
	}
}

.touch{
	select{
		position:relative;
		top:-5px;
	}
}

#thank-you{
	margin-top:-100px;
	height:80px;
	position:relative;
	z-index:1;
	width:100%;
	text-align:center;
	background:url(heart.png) center center no-repeat $green;
	padding:10px 0;
	color:#fff;
	h3{
		margin-bottom:0;
		@include font-nb;
		font-size:1em;
	}
	p{
		margin-top:0;
		font-family:'gi';
		font-size:1.1em;
	}
}

#main{
	hgroup{
		padding:20px 0;
		margin:0;
		border-bottom: 1px solid $border-gray;
		text-align:center;
		@include gray-arrow;
		h2,h1{
			@include font-nb;
			font-size:1.25em;
			color:$purple;
			text-shadow:2px 2px 0px #dfdfdf;
			text-transform:uppercase;
			margin:0;
			&:before{
				content: "• ";
				speak: none;
			}
			&:after{
				content: " •";
				speak: none;
			}
		}
		h3{
			margin:0;
			font-size: 0.875em;
			font-family: gi;
			color:$blue;
			font-weight:normal;
		}		
	}
}


#contact-cta{
	margin-top:80px;
	padding:20px 0;
	background:$blue;
	color:#fff;
	h4{
		@include font-nb;
		text-align:center;
	}
	p{
		text-align:center;
		font-family:gi;
		font-weight:normal;
		display:block;
		width:100%;
		color:#fff;
		font-size:1.2em !important;
	}
	a{
		font-family:gbi;
		color:white;
	}
}

footer{
	width:100%;
	background:#000;
	ul{
		border-bottom:1px solid $border-gray;
		color:#fff;
		li{
			list-stlye:none;
			width:100%;
			@include font-nb;
			letter-spacing:1px;
			font-size:0.75em;
			
			&.active,&:hover,&:focus,&:active{
				background:$lightgray;
				span{
					display:inline;
				}
			}
		}
		span{
			display:none;
		}
		a{
			color:#fff;
			text-decoration:none;
			display:block;
			padding:10px;
		}
	}
	p{
		&:last-child{
			margin-bottom:0;
			padding-bottom:10px;
		}
		text-align:center;
		font-family:osi;
		width:100%;
		color:#8F8A8A;
		font-size:0.875em;
		a{
			color:#fff;
			text-decoration:none;
		}
	}
}

#social{
	text-align:center;
	iframe{
		display:inline;
		position:relative;
		top:1px;
		&:first-child{
			top:0;
		}
	}
}

